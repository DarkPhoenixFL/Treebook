
<div class="row" >
  	<div class="span3 well well-small"
		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  	<%= devise_error_messages! %>
		<fieldset>
	      <legend>Forgot your password?</legend>

		  	<div><%= f.input :email, autofocus: true %></div>
			<div><%= f.button :submit, "Reset password instructions" %></div>
		</fieldset>	
		<% end %>
	</div>

	<div class="span8">
    <h4>Just enter your Email and we will send you instuctions on how to reset you password.</h4>
  	</div>
</div>

<div class="row">
  <div class="span4">
    <%= render "devise/shared/links" %>
  </div>
</div>
